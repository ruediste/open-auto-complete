{
  "name": "open-auto-complete",
  "displayName": "Open Auto Complete",
  "description": "An extension to create auto completions using LLMs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-auto-complete.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Open Auto Complete",
      "properties": {
        "openAutoComplete.apiBase": {
          "type": "string",
          "description": "URL to access the LLM",
          "default": "https://api.mistral.ai/v1"
        },
        "openAutoComplete.apiKey": {
          "type": "string",
          "description": "Api Key to access the LLM"
        },
        "openAutoComplete.log.completionManager": {
          "type": "boolean",
          "description": "If true, the matching and queuing of completions is logged"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "watch-tests": "jest --watchAll",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "jest": "^29.5.14",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "lru-cache": "^11.0.2"
  }
}
